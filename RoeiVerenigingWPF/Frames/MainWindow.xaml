<Window x:Class="RoeiVerenigingWPF.Frames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RoeiVerenigingWPF.Frames"
        xmlns:Components="clr-namespace:RoeiVerenigingWPF.Components"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Grid>
        
        <!-- Grid.RowDefinition and Grid.ColumnDefinition --> 
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        
        </Grid.ColumnDefinitions>
        
        <!-- All the reusable components-->
        <Components:Header Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Components:Buttons Grid.Row="1" Grid.Column="0"/> 
        <Frame x:Name="MainContent" Grid.Row="1" Grid.Column="1"/>
        <!-- Other components -->
    </Grid>
</Window>
